# Restrict access to script.js
<Files "script/script.js">
    Require all denied
    <If "%{HTTP_REFERER} =~ m#^http://localhost/paquibot/#">
        Require all granted
    </If>
</Files>

# Restrict access to style.css
<Files "styles/style.css">
    Require all denied
    <If "%{HTTP_REFERER} =~ m#^http://localhost/paquibot/#">
        Require all granted
    </If>
</Files>

<Files "assets">
    Require all denied
    <If "%{HTTP_REFERER} =~ m#^http://localhost/paquibot/#">
        Require all granted
    </If>
</Files>

# Redirect 403 errors to 404.html
ErrorDocument 403 http://localhost/paquibot/views/404.html
